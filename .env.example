# PRODUCTION/DEPLOYMENT ENVIRONMENT
# Copy this file to .env and configure your values

PORT=3000
NODE_ENV=production

# MongoDB Atlas connection string (recommended for production)
# Example: mongodb+srv://user:password@cluster.mongodb.net/suscripciontracker?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/suscripciontracker

# Generate a strong secret with: node scripts/generate-jwt-secret.js
JWT_SECRET=replace_with_your_jwt_secret_key
JWT_EXPIRATION=24h

# Arcjet configuration
ARCJET_ENV=PRODUCTION
ARCJET_KEY=ajkey_your_production_key_here

# Security settings
DEBUG_MODE=false
